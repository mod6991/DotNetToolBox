<UserControl x:Class="DotNetToolBox.Tester.View.ConfigurationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataGrid ItemsSource="{Binding Settings}" AutoGenerateColumns="False">
        <DataGrid.Columns>
            <DataGridTextColumn Width="140" Header="Section" Binding="{Binding Section}" />
            <DataGridTextColumn Width="140" Header="Setting" Binding="{Binding Setting}" />
            <DataGridTextColumn Width="140" Header="Value" Binding="{Binding Value}" />
        </DataGrid.Columns>
    </DataGrid>
</UserControl>
